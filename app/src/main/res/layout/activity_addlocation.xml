<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/splash">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_55sdp"
            android:orientation="vertical">



            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etaddressType"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_54sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:backgroundTint="@color/colorWhite"
                android:fontFamily="@font/lora_regular"
                android:textColor="@color/colorWhite"
                android:hint="Address Type"
                android:inputType="text"
                android:textColorHint="@color/colorWhite" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etflatOrHouse"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_54sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:backgroundTint="@color/colorWhite"
                android:fontFamily="@font/lora_regular"
                android:textColor="@color/colorWhite"
                android:hint="Flat / House / Company"
                android:inputType="text"
                android:textColorHint="@color/colorWhite" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etareaOrColony"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_54sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:backgroundTint="@color/colorWhite"
                android:fontFamily="@font/lora_regular"
                android:textColor="@color/colorWhite"
                android:hint="Area / Colony / Street"
                android:inputType="text"
                android:textColorHint="@color/colorWhite" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etpinCode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_54sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:backgroundTint="@color/colorWhite"
                android:fontFamily="@font/lora_regular"
                android:textColor="@color/colorWhite"
                android:hint="Pincode"
                android:inputType="number"
                android:textColorHint="@color/colorWhite" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ettownOrCity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_54sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:backgroundTint="@color/colorWhite"
                android:fontFamily="@font/lora_regular"
                android:textColor="@color/colorWhite"
                android:hint="Town / City"
                android:inputType="text"
                android:textColorHint="@color/colorWhite" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etLandmark"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_54sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:backgroundTint="@color/colorWhite"
                android:fontFamily="@font/lora_regular"
                android:textColor="@color/colorWhite"
                android:hint="Land Mark"
                android:inputType="text"
                android:textColorHint="@color/colorWhite" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddaddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_80sdp"
                android:layout_marginRight="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/loginbutton"
                android:fontFamily="@font/lora_regular"
                android:text="Add Address"
                android:textAllCaps="false"
                android:textColor="@color/colorBlackTextView"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:src="@drawable/ic_back"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:fontFamily="@font/lora_regular"
            android:text="Add New Address"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_16sdp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/btn_logout2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>