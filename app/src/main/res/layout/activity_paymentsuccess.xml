<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Paymentsuccess">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_54sdp"
        android:layout_marginTop="@dimen/_42sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_70sdp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lora_regular"
                android:text="Thank You"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_26sdp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/tick" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lora_regular"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="Thank you for placing an order with us."
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp" />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/lora_regular"
              android:layout_marginTop="@dimen/_10sdp"
              android:text="Your order has been placed successfully"
              android:textAlignment="center"
              android:textColor="@color/colorBlack"
              android:textSize="@dimen/_14sdp" />

          <TextView
              android:id="@+id/orderId"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/lora_regular"
              android:layout_marginTop="@dimen/_10sdp"
              android:text="Your Order ID is TG386"
              android:textAlignment="center"
              android:textStyle="bold"
              android:textColor="@color/quantum_yellow900"
              android:textSize="@dimen/_14sdp" />



          <androidx.appcompat.widget.AppCompatButton
              android:id="@+id/btnSubmit"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_40sdp"
              android:layout_marginLeft="@dimen/_70sdp"
              android:layout_marginTop="@dimen/_40sdp"
              android:layout_marginRight="@dimen/_70sdp"
              android:layout_marginBottom="@dimen/_20sdp"
              android:background="@drawable/submitbutton"
              android:fontFamily="@font/lora_regular"
              android:textAllCaps="false"
              android:text="View Order Details"
              android:textColor="@color/colorWhite"
              android:textSize="16sp" />

        </LinearLayout>


    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:src="@drawable/ic_back"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgNotification"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:src="@drawable/ic_notifications" />

                <ImageView
                    android:id="@+id/imgSearch"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toLeftOf="@+id/imgNotification"
                    android:src="@drawable/ic_search" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


  <include layout="@layout/include_bottom_nav"
      android:layout_alignParentBottom="true"
      android:layout_height="wrap_content"
      android:layout_width="match_parent" />


</RelativeLayout>